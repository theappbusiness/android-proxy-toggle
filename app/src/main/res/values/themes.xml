<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProxyToggle" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vivid_purple</item>
        <item name="colorPrimaryVariant">@color/periwinkle</item>
        <item name="colorOnPrimary">@color/pale_grey</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Overridden in night/colors -->
        <item name="android:colorBackground">@color/screen_background</item>
    </style>
</resources>
